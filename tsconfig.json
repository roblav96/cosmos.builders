{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["dom", "esnext"],
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": false,
		"removeComments": true,
		"sourceMap": true,
		"pretty": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
